@model PruebaTecnica.EntidadesDeNegocio.AlquiladosYVendidos

@{
    ViewData["Title"] = "Details";
}

<h1>Ver Vendidos o Alquilado</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clientes.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdLibro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libros.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desde)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hasta)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        @if (Model.Estado == 1)
        {
    <dd class="col-sm-10">
        VENDIDO
    </dd>
        }
        else if (Model.Estado == 2)
        {
    <dd class="col-sm-10">
        ALQUILADO
    </dd>
        }
        else
        {
            <dd class="col-sm-10"> </dd>
        }
    </dl>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.ActionLink("Ir a modificar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
            <a asp-action="Index" class="btn btn-dark">Cancelar</a>
        </div>
    </div>
</div>