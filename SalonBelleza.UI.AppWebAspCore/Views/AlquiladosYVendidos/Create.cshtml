@model PruebaTecnica.EntidadesDeNegocio.AlquiladosYVendidos

@{
    ViewData["Title"] = "Create";
    List<PruebaTecnica.EntidadesDeNegocio.Libros> libros = ViewBag.Libros as List<PruebaTecnica.EntidadesDeNegocio.Libros>;
    List<PruebaTecnica.EntidadesDeNegocio.Clientes> clientes = ViewBag.Clientes as List<PruebaTecnica.EntidadesDeNegocio.Clientes>;
}

<h1>Crear Cita</h1>
<hr />
<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

   
    <br />
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            @*codigo html de campos a llenar*@
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IdCliente" class="control-label"></label>
                        <select asp-for="IdCliente" class="form-control">
                            <option selected value="">SELECCIONAR</option>
                            @foreach (var item in clientes)
                            {
                                <option value="@item.Id">@item.Nombre</option>
                            }
                        </select>
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IdLibro" class="control-label"></label>
                        <select asp-for="IdLibro" class="form-control">
                            <option selected value="">SELECCIONAR</option>
                            @foreach (var item in libros)
                            {
                                <option value="@item.Id">@item.Titulo</option>
                            }
                        </select>
                        <span asp-validation-for="IdLibro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Desde" class="control-label"></label>
                        <input type="date" name="desde" class="form-control" />
                        <span asp-validation-for="Desde" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Hasta" class="control-label"></label>
                        <input type="date" name="hasta" class="form-control" />
                        <span asp-validation-for="Hasta" class="text-danger"></span>
                    </div>
                </div>



                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label"></label>
                        <select asp-for="Estado" class="form-control">
                            <option value="">SELECCIONAR</option>
                            <option value="1">VENDIDO</option>
                            <option value="2">ALQUILADO</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*aqui termina codigo html de campos a llenar*@
        </div>
    </div>

    

    


    @*botones*@
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Cancelar</a>
            </div>
            <span class="text-danger">@ViewBag.Error</span>
        </div>
    </div>
</form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
