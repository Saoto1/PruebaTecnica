@model PruebaTecnica.EntidadesDeNegocio.AlquiladosYVendidos

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Registro</h1>

<h3>¿ Esta seguro que desea eliminar ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clientes.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdLibro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libros.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desde)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hasta)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        @if (Model.Estado == 1)
        {
    <dd class="col-sm-10">
        VENDIDO
    </dd>
        }
        else if (Model.Estado == 2)
        {
    <dd class="col-sm-10">
        ALQUILADO
    </dd>
        }
        else
        {
            <dd class="col-sm-10"> </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Cancelar</a>
    </form>
    <span class="text-danger">@ViewBag.Error</span>
</div>
